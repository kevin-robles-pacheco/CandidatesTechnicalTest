@model TechnicalTest.Domain.DTOs.CandidateDto

<h1>Delete</h1>

<h2>Confirm Deletion</h2>

<p>Are you sure you want to delete the following candidate?</p>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IdCandidate" />
    <div class="form-group">
        <input type="submit" value="Confirm Deletion" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
