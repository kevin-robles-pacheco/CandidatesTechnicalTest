@model TechnicalTest.Infraestructure.Services.Candidates.Commands.CreateCandidateExperienceCommand

<h2>Add Candidate Experience</h2>

<form asp-action="CreateExperience">
    <input type="hidden" asp-for="IdCandidate" value="@ViewBag.CandidateId" />
    <div class="form-group">
        <label asp-for="Company" class="control-label"></label>
        <input asp-for="Company" class="form-control" />
        <span asp-validation-for="Company" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Job" class="control-label"></label>
        <input asp-for="Job" class="form-control" />
        <span asp-validation-for="Job" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BeginDate" class="control-label"></label>
        <input asp-for="BeginDate" type="date" class="form-control" />
        <span asp-validation-for="BeginDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="control-label"></label>
        <input asp-for="Salary" class="form-control" step="0.01" min="0" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <hr />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<hr />
<div>
    <a asp-action="Details" asp-route-id="@ViewBag.CandidateId" class="btn btn-secondary">Back to Details</a>
</div>
