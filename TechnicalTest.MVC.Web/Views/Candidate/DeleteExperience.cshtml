@model TechnicalTest.Domain.DTOs.CandidateExperienceDto

<h1>Delete Experience</h1>

<h2>Confirm Deletion</h2>

<p>Are you sure you want to delete the following candidate experience?</p>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Company)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Company)
    </dd>
</dl>

<form asp-action="DeleteExperienceConfirmed">
    <input type="hidden" asp-for="@Model.IdCandidateExperience" />
    <div class="form-group">
        <input type="submit" value="Confirm Deletion" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.IdCandidateExperience" class="btn btn-secondary">Cancel</a>
    </div>
</form>
